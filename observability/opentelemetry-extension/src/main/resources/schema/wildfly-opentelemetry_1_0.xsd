<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="urn:wildfly:opentelemetry:1.0"
           xmlns="urn:wildfly:opentelemetry:1.0"
           elementFormDefault="qualified"
           version="1.0">

    <xs:element name="subsystem">
        <xs:complexType>
            <xs:sequence >
                <xs:element name="exporter" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:attribute name="exporter" default="jaeger">
                            <xs:simpleType>
                                <xs:restriction base="xs:string">
                                    <xs:enumeration value="jaeger"/>
                                    <xs:enumeration value="otlp"/>
                                </xs:restriction>
                            </xs:simpleType>
                        </xs:attribute>
                        <xs:attribute name="endpoint" type="xs:string"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="span-processor" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                        <xs:attribute type="xs:string" name="span-processor" default="batch"/>
                        <xs:attribute type="xs:integer" name="batch-delay" default="5000"/>
                        <xs:attribute type="xs:integer" name="max-queue-size" default="2048"/>
                        <xs:attribute type="xs:integer" name="max-export-batch-size" default="512"/>
                        <xs:attribute type="xs:integer" name="export-timeout" default="30000"/>
                    </xs:complexType>
                </xs:element>
                <xs:element name="sampler" minOccurs="0" maxOccurs="1">
                    <xs:complexType>
                                <xs:attribute type="xs:string" name="sampler"/>
                                <xs:attribute type="xs:integer" name="sampler-arg"/>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
            <xs:attribute type="xs:string" name="service-name"/>
        </xs:complexType>
    </xs:element>
</xs:schema>

<?xml version="1.0" ?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0" name="ejb3-iiop">
    <!-- Aggregates all EJB3 functionality, including ejb-iiop. -->
    <dependencies>
        <layer name="ejb3-lite"/>
        <layer name="iiop-openjdk"/>
    </dependencies>
    <feature spec="subsystem.ejb3.service.iiop">
        <param name="enable-by-default" value="false"/>
        <param name="use-qualified-name" value="false"/>
    </feature>
</layer-spec>
